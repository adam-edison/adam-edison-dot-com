# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Email Configuration with Resend
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=your-contact@email.com
TO_EMAIL=your-inbox@email.com

# Email Settings
# Set to 'true' to enable email sending
SEND_EMAIL_ENABLED=true

# Email Service Names
EMAIL_SENDER_NAME=Personal Website Contact Form
EMAIL_RECIPIENT_NAME=Adam Edison

# Cloudflare Turnstile Configuration
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Turnstile Service Configuration
TURNSTILE_TIMEOUT_MS=10000
TURNSTILE_TOKEN_EXPIRY_SECONDS=300

# CSRF Configuration
CSRF_TOKEN_TTL_SECONDS=900

# reCAPTCHA Configuration (deprecated - use Turnstile instead)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
# RECAPTCHA_SCORE_THRESHOLD=0.5
# NEXT_PUBLIC_RECAPTCHA_TIMEOUT_MS=10000

# Rate Limiting with Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token
REDIS_PREFIX=personal-website

# Contact Form Rate Limiting Configuration

# Per-IP contact form submissions
CONTACT_IP_RATE_LIMIT_REQUESTS=2
CONTACT_IP_RATE_LIMIT_WINDOW=30 m

# Total contact form submissions across all users
CONTACT_GLOBAL_RATE_LIMIT_REQUESTS=10
CONTACT_GLOBAL_RATE_LIMIT_WINDOW=1 h

# Per-email contact form submissions (with Gmail normalization)
CONTACT_EMAIL_RATE_LIMIT_REQUESTS=3
CONTACT_EMAIL_RATE_LIMIT_WINDOW=24 h

# Social Media URLs
NEXT_PUBLIC_GITHUB_URL=https://github.com/adam-edison
NEXT_PUBLIC_LINKEDIN_URL=https://www.linkedin.com/in/adam-edison-software/
NEXT_PUBLIC_REPO_URL=https://github.com/adam-edison/adam-edison-dot-com
